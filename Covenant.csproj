      <HintPath>refs\dnlib.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <None Remove="Data\covenant.db-journal" />
    <None Remove="Data\covenant.db" />
  </ItemGroup>
